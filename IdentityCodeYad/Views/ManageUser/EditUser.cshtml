@using IdentityCodeYad.ViewModels.ManageUser
@model EditViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h1>EditUser</h1>

<form asp-controller="ManageUser" asp-action="EditUser" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label class="control-label" asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
    </div>
    @{
        var Roles = ViewBag.Roles as List<RolesViewModel>;
        var UserRoles = ViewBag.UserRoles as List<string>;
    }
    <div class="form-group">
        @foreach (var role in Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" @((UserRoles.Contains(role.roleName)) ? "checked" : "") name="SelectedRoles" value="@role.roleName">
                <label class="form-check-label">@role.roleName</label>
            </div>
        }
    </div>

    <input type="hidden" asp-for="Id" />

    <button class="btn btn-primary" type="submit">Submit</button>
</form>
